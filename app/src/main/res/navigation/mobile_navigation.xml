<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.simon.homeirrigationclient.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_watering"
        android:name="com.simon.homeirrigationclient.ui.watering.WateringFragment"
        android:label="Watering"
        tools:layout="@layout/fragment_watering" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.simon.homeirrigationclient.ui.statistics.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_network_settings"
        android:name="com.simon.homeirrigationclient.ui.networksettings.NetworkSettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_network_settings" />
</navigation>